<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AboutMeActivity" android:orientation="vertical" android:padding="@dimen/bmi_activity_margin">

    <TextView
            android:text="@string/bmi_about_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/bmi_about_name"
            android:fontFamily="sans-serif-condensed-medium" android:textSize="@dimen/bmi_about_name_size"
            android:textAlignment="center"
            android:layout_weight="1.2" android:gravity="center"/>
    <CheckBox
            android:text="@string/bmi_about_colors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/bmi_about_colors" android:layout_weight="1.3"
    />
    <TextView
            android:text="@string/bmi_about_click_zero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/bmi_about_counter"/>
    <Button
            android:id="@+id/bmi_about_click_me"
            android:text="@string/bmi_about_click_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="2"
            style="@style/Widget.AppCompat.Button"/>
</LinearLayout>